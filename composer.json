{
    "name": "devanox/tailwind-class-merge-php",
    "description": "TailwindClassMerge for PHP merges multiple Tailwind CSS classes by automatically resolving conflicts between them",
    "keywords": ["php", "tailwindcss", "merge", "classes"],
    "license": "MIT",
    "authors": [
        {
            "name": "Mr Chetan",
            "email": "contact@mrchetan.com"
        }
    ],
    "require": {
        "php": "^8.1.0",
        "illuminate/support": "^v10.17.0"
    },
    "require-dev": {
        "laravel/pint": "^1.10",
        "nunomaduro/collision": "^7.7",
        "pestphp/pest": "v2.11",
        "pestphp/pest-plugin-arch": "^2.1.2",
        "pestphp/pest-plugin-mock": "^2.0",
        "pestphp/pest-plugin-type-coverage": "^2.0",
        "phpstan/phpstan": "^1.10",
        "rector/rector": "^0.17",
        "symfony/var-dumper": "^6.3"
    },
    "autoload": {
        "psr-4": {
            "TailwindClassMerge\\": "src/"
        },
        "files": [
            "src/TailwindClassMerge.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "config": {
        "sort-packages": true,
        "preferred-install": "dist",
        "allow-plugins": {
            "pestphp/pest-plugin": true
        }
    },
    "scripts": {
        "refactor:lint": "pint -v",
        "refactor:rector": "rector",
        "test:lint": "pint --test -v",
        "test:refactor": "rector --dry-run",
        "test:types": "phpstan analyse --ansi",
        "test:type-coverage": "pest --type-coverage --min=100",
        "test:pest": "pest --colors=always",
        "test": [
            "@test:lint",
            "@test:refactor",
            "@test:types",
            "@test:type-coverage",
            "@test:pest"
        ]
    }
}
