{
    "name": "devanox/tailwind-class-merge-php",
    "description": "TailwindClassMerge for PHP merges multiple Tailwind CSS classes by automatically resolving conflicts between them",
    "keywords": ["php", "tailwindcss", "merge", "classes"],
    "license": "MIT",
    "authors": [
        {
            "name": "Mr Chetan",
            "email": "contact@mrchetan.com"
        }
    ],

    "support": {
        "issues": "https:://github.com/devanoxltd/tailwind-class-merge-php/issues",
        "source": "https:://github.com/devanoxltd/tailwind-class-merge-php"
    },
    "require": {
        "php": "^8.2.0",
        "psr/simple-cache": "^3.0",
        "illuminate/support": "v10.40.0"
    },
    "require-dev": {
        "laravel/pint": "^v1.13.8",
        "nunomaduro/collision": "^7.10.0",
        "pestphp/pest": "v2.30.0",
        "pestphp/pest-plugin-arch": "^v2.6.0",
        "pestphp/pest-plugin-mock": "^2.0",
        "pestphp/pest-plugin-type-coverage": "^v2.8.0",
        "phpstan/phpstan": "^1.10.55",
        "rector/rector": "^0.19.0",
        "symfony/var-dumper": "v7.0.2"
    },
    "autoload": {
        "psr-4": {
            "TailwindClassMerge\\": "src/"
        },
        "files": [
            "src/TailwindClassMerge.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "config": {
        "sort-packages": true,
        "preferred-install": "dist",
        "allow-plugins": {
            "pestphp/pest-plugin": true
        }
    },
    "scripts": {
        "refactor:lint": "pint -v",
        "refactor:rector": "rector",
        "test:lint": "pint --test -v",
        "test:refactor": "rector --dry-run",
        "test:types": "phpstan analyse --ansi",
        "test:type-coverage": "pest --type-coverage --min=100",
        "test:pest": "pest --colors=always",
        "test": [
            "@test:lint",
            "@test:refactor",
            "@test:types",
            "@test:type-coverage",
            "@test:pest"
        ]
    }
}
